@page
@model TattooRazorPages.Pages.BookingPage.BookingModel

@{
    ViewData["Title"] = "Booking";
}

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["BookingSuccess"] != null)
        {
            <div class="alert alert-success">
                @TempData["BookingSuccess"]
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Booking.ArtistId" class="control-label">Artist Name</label>
                <select asp-for="Booking.ArtistId" class="form-control" asp-items="ViewBag.ArtistId">
                    <option value="">-- Chọn Thợ xăm --</option>
                    @foreach (var artist in Model.Artists)
                    {
                        <option value="@artist.ArtistId">@artist.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ServiceId" class="control-label">Service Name</label>
                <select asp-for="Booking.ServiceId" class="form-control" asp-items="ViewBag.ServiceId">
                    <option value="">-- Chọn dịch vụ --</option>
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.ServiceId">@service.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Price" class="control-label"></label>
                <input asp-for="Booking.Price" class="form-control" />
                <span asp-validation-for="Booking.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDateTime" class="control-label"></label>
                <input asp-for="Booking.BookingDateTime" class="form-control" />
                <span asp-validation-for="Booking.BookingDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Note" class="control-label"></label>
                <input asp-for="Booking.Note" class="form-control" />
                <span asp-validation-for="Booking.Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Booking" class="btn btn-primary" />
                <a asp-page="/CustomerPage/CustomerDetail" class="btn btn-secondary">Back</a>
            </div>
@*             <div class="customer-actions">
                <a asp-page="/CustomerPage/CustomerDetail" class="btn btn-secondary">Customer</a>
            </div> *@
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
