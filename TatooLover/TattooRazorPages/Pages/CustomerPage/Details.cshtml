@page
@model TattooRazorPages.Pages.CustomerPage.DetailsModel

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div class="customer-details">
    <h4>Customer Information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            Customer Code:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Code
        </dd>

        <dt class="col-sm-3">
            Email:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Email
        </dd>

        <dt class="col-sm-3">
            Name:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Name
        </dd>

        <dt class="col-sm-3">
            Address:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Address
        </dd>

        <dt class="col-sm-3">
            Phone:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Phone
        </dd>

        <dt class="col-sm-3">
            Avatar:
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Customer?.Avatar))
            {
                <img src="@Model.Customer?.Avatar" alt="Avatar" class="img-fluid" />
            }
        </dd>

        <dt class="col-sm-3">
            Status:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Status
        </dd>
    </dl>
</div>

<div class="customer-actions">
    <a asp-page="./Edit" asp-route-id="@Model.Customer?.CustomerId" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
