@page
@model TattooRazorPages.Pages.CustomerPage.IndexModel

@{
    ViewData["Title"] = "Customer List";
}

<h1>Customer List</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Email</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Avatar</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Avatar))
                        {
                            <img src="@item.Avatar" alt="Avatar" width="50" height="50" />
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-info">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-primary">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
