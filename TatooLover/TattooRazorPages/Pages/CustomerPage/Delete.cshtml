@page
@model TattooRazorPages.Pages.CustomerPage.DeleteModel

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<div class="customer-details">
    <h3>Are you sure you want to delete this customer?</h3>
    <hr />

    <h4>Customer Information</h4>
    <dl class="row">
        <dt class="col-sm-3">
            Customer Code:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Code
        </dd>

        <dt class="col-sm-3">
            Email:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Email
        </dd>

        <dt class="col-sm-3">
            Name:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Name
        </dd>

        <dt class="col-sm-3">
            Address:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Address
        </dd>

        <dt class="col-sm-3">
            Phone:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Phone
        </dd>

        <dt class="col-sm-3">
            Avatar:
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Customer?.Avatar))
            {
                <img src="@Model.Customer?.Avatar" alt="Avatar" class="img-fluid" />
            }
        </dd>

        <dt class="col-sm-3">
            Status:
        </dt>
        <dd class="col-sm-9">
            @Model.Customer?.Status
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Customer.CustomerId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
