@page
@model TattooRazorPages.Pages.ArtistPage.DeleteScheduleModel

@{
    ViewData["Title"] = "DeleteSchedule";
    Layout = "_ArtistLayout";
}

<h1>DeleteSchedule</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.TimeFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.TimeFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.TimeTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.TimeTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Status)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Schedule.ScheduleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Schedule">Back to Schedule</a>
    </form>
</div>
