@page
@model TattooRazorPages.Pages.ArtistPage.BookingDetailsModel

@{
    ViewData["Title"] = "BookingDetails";
    Layout = "_ArtistLayout";
}

<h1>BookingDetails</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.BookingDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.BookingDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Point)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Point)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.ArtistFeedBack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.ArtistFeedBack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.ServiceFeedBack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.ServiceFeedBack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Status)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Booking.Status)
                {
                    case 0:
                        <span style="color: blue">Pending</span>
                        break;
                    case 1:
                        <span style="color: green">Check-in</span>
                        break;
                    case 2:
                        <span style="color: green">Done</span>
                        break;
                    case 3:
                        <span style="color: green">Check-out</span>
                        break;
                    case 4:
                        <span style="color: green">Finished</span>
                        break;
                    default:
                        <span style="color: red">Unknown Status</span>
                        break;
                }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Customer.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Booking?.BookingId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
