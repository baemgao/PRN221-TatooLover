@page
@model TattooRazorPages.Pages.ArtistPage.FeedbackModel
@{
    ViewData["Title"] = "Feedback";
    Layout = "_StudioLayout";
}

<style>
    .small-box {
        border-radius: 15px;
        background-color: #000033;
        padding: 5px;
        text-align: center;
        margin: 10px 0;
        color: #fff;
    }

    table th {
        text-align: center;
    }

    .th-d {
        text-align: center;
    }
</style>

<style>
    h1 {
        color: blueviolet
    }
</style>

<div>
    <div><h1>Feedback Management</h1></div>
</div>

<br />

<table class="table table-primary ">
    <thead>
        <tr table-primary>
            <th>Id</th>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Artist Name</th>
            <th>Service Name</th>
            <th>Feedback For Service</th>
            <th>Feedback For Artist</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.bookings.Count; i++)
        {
            var booking = Model.bookings[i];
            int status;

            <tr table-secondary>
                <td class="th-d">@(i + 1)</td>
                <td class="th-d">
                    <a asp-page="./BookingDetails" asp-route-id="@booking.BookingId" >@booking.BookingId</a>
                </td>
                <td>@booking.Customer.Name</td>
                <td>@booking.Artist.Name</td>
                <td>@booking.Service.Name</td>
                <td>@booking.ServiceFeedBack</td>
                <td>@booking.ArtistFeedBack</td>
            </tr>
        }
    </tbody>
</table>