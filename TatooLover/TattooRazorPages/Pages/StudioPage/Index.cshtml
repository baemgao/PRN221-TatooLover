@page
@model TattooRazorPages.Pages.StudioPage.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h1>Hello @Model.studio.Name comeback, </h1>
<br />
<h2>
    Today's Booking
    <div style="color: green">@Model.today.ToString("dd-MM-yyyy")</div>
</h2>
<br />

<form method = "post" >

</form>

<table class="table table-primary ">
    <thead>
        <tr table-primary>
            <th>Id</th>
            <th>Artist Code</th>
            <th>Artis Name</th>
            <th>Customer code</th>
            <th>Customer Name</th>
            <th>Booking Date</th>
            <th>Booking Date Time</th>
            <th>Price</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.bookingList.Count; i++)
        {
            <tr table-secondary>
                <td>@(i + 1)</td>
                <td>@Model.bookingList[i].Artist.Code</td>
                <td>@Model.bookingList[i].Artist.Code</td>
                <td>@Model.bookingList[i].Customer.Code</td>
                <td>@Model.bookingList[i].Customer.Name</td>
                <td>@Model.bookingList[i].BookingDate</td>
                <td>@Model.bookingList[i].BookingDateTime</td>
                <td>@Model.bookingList[i].Price</td>
                <td>
                    @switch (Model.bookingList[i].Status)
                    {
                        case 0:
                            {
                                <span style="color:blue">Pending</span>
                            }
                            break;
                        case 1:
                            {
                                <span style="color:green">Check In</span>
                            }
                            break;
                        case 2:
                            {
                                <span style="color:green">Done </span>
                            }
                            break;
                        case 3:
                            {
                                <span style="color:green">CheckOut</span>
                            }
                            break;
                        case 4:
                            {
                                <span style="color:green">CheckOut</span>
                            }
                            break;
                    }
                </td>
            </tr>
        }
    </tbody>
</table>