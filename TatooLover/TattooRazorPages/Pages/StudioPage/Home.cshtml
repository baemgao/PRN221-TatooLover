@page
@model TattooRazorPages.Pages.StudioPage.HomeModel
@{
    ViewData["Title"] = "Home";
    Layout = "_StudioLayout";
}
<style>
    .small-box {
        border-radius: 15px;
        background-color: #000033;
        padding: 5px;
        text-align: center;
        margin: 10px 0;
        color: #fff;
    }

    table th {
        text-align: center;
    }
</style>
@if (Model.studio != null)
{
    <h1>Hello @Model.studio.Code - @Model.studio.Name comeback</h1>
}
<h3 style="color: green">@Model.today.ToString("dd-MM-yyyy")</h3>
<br />

<div class="container">
    <div class="row">
        <div class="col-3">
            <div class="small-box" href="Index">
                <h3>Booking</h3>
                <p>@Model.booking</p>
            </div>
        </div>
        <div class="col-3">
            <div class="small-box" href="Artist">
                <h3>Artist</h3>
                <p>@Model.artist</p>
            </div>
        </div>
        <div class="col-3">
            <div class="small-box" href="Service">
                <h3>Service</h3>
                <p>@Model.service</p>
            </div>
        </div>
        <div class="col-3">
            <div class="small-box" href="Feedback">
                <h3>Feedback</h3>
                <p>@Model.feedback</p>
            </div>
        </div>
    </div>
</div>

<br />
<h2>
    Today's Booking
</h2>
<br />

<table class="table table-primary ">
    <thead>
        <tr table-primary>
            <th>Id</th>
            <th>Artist Code</th>
            <th>Artis Name</th>
            <th>Customer code</th>
            <th>Customer Name</th>
            <th>Booking Date</th>
            <th>Booking Date Time</th>
            <th>Price</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.bookingList != null)
        {
            @for (int i = 0; i < Model.bookingList.Count; i++)
            {
                <tr table-secondary>
                    <td>@(i + 1)</td>
                    <td>@Model.bookingList[i].Artist.Code</td>
                    <td>@Model.bookingList[i].Artist.Name</td>
                    <td>@Model.bookingList[i].Customer.Code</td>
                    <td>@Model.bookingList[i].Customer.Name</td>
                    <td>@Model.bookingList[i].BookingDate</td>
                    <td>@Model.bookingList[i].BookingDate.ToString("dd-MM-yyyy")</td>
                    <td>@Model.bookingList[i].BookingDateTime</td>
                    <td>@Model.bookingList[i].Price</td>
                    <td>
                        @switch (Model.bookingList[i].Status)
                        {
                            case 0:
                                {
                                    <span style="color:blue">Pending</span>
                                }
                                break;
                            case 1:
                                {
                                    <span style="color:green">Check-in</span>
                                }
                                break;
                            case 2:
                                {
                                    <span style="color:green">Done </span>
                                }
                                break;
                            case 3:
                                {
                                    <span style="color:green">Check-ut</span>
                                }
                                break;
                            case 4:
                                {
                                    <span style="color:green">Finished</span>
                                }
                                break;
                        }
                    </td>
                </tr>
            }
        } else
        {
            <h4>Empty list!</h4>
        }
    </tbody>
</table>