@page
@model TattooRazorPages.Pages.StudioPage.DetailsModel
@{
    ViewData["Title"] = "Booking Details";
    Layout = "_StudioLayout";
}

<h1>Booking Details</h1>

<div class="booking-details">
    <h4>Booking Information</h4>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-6">
                <dl class="row">
                    <dt class="col-sm-3">
                        Booking ID:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.booking.BookingId
                    </dd>

                    <dt class="col-sm-3">
                        Date:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.booking.BookingDate
                    </dd>

                    <dt class="col-sm-3">
                        Booking Date Time:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.booking.BookingDateTime
                    </dd>

                    <dt class="col-sm-3">
                        Customer:
                    </dt>
                    <dd class="col-sm-9">
                        <a asp-page="./CustomerPage/Details" asp-route-id="@Model.booking.Customer.CustomerId">@Model.booking.Customer.Name</a>
                    </dd>

                    <dt class="col-sm-3">
                        Artist:
                    </dt>
                    <dd class="col-sm-9">
                        <a asp-page="./ArtistPage/Details" asp-route-id="@Model.booking.Artist.ArtistId">@Model.booking.Artist.Name</a>
                    </dd>
                </dl>
            </div>

            <div class="col-6">
                <dl class="row">
                    <dt class="col-sm-3">
                        Service:
                    </dt>
                    <dd class="col-sm-9">
                        @* @Model.booking.BookingDetails *@
                    </dd>

                    <dt class="col-sm-3">
                        Description:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.booking.BookingDate
                    </dd>

                    <dt class="col-sm-3">
                        Booking Date TIme:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.booking.BookingDateTime
                    </dd>

                    <dt class="col-sm-3">
                        Customer:
                    </dt>
                    <dd class="col-sm-9">
                        
                    </dd>

                    <dt class="col-sm-3">
                        Artist:
                    </dt>
                    <dd class="col-sm-9">
                        <a asp-asp-route="./ArtistPage/Details" asp-route-id="@Model.booking.Artist.ArtistId">@Model.booking.Artist.Name</a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    
</div>

<div class="booking-actions">
    <!-- Add buttons or links for editing or navigating back as needed -->
</div>
